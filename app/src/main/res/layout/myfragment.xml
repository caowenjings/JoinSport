<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/colorblue"
        android:layout_width="match_parent"
        android:layout_height="70dp">
            <ImageView
                android:id="@+id/img_userhead"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@drawable/myfragment_head"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_weight="8"
                android:id="@+id/tv_username"
                android:layout_width="400dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/colorwhite"
                android:text="222"
                android:textSize="30dp"/>

        <ImageView
            android:id="@+id/btn_informatoin"
            android:src="@drawable/back_right_white"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_order">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_order"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/myfragment_user_order"
                    android:layout_width="32dp"
                    android:layout_height="32dp"  />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="预约管理" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_need"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/myfragment_user_need"
                    android:layout_width="32dp"
                    android:layout_height="32dp"  />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="发布需求" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_joinedneed"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/myfragment_user_myneed"
                    android:layout_width="32dp"
                    android:layout_height="32dp"  />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的需求" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_collect"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/myfragment_user_collection"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的收藏" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_setting"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/myfragment_setting"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="设置" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_exit"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/myfragment_user_exit"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:textSize="15sp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="退出登录" />
                <ImageView
                    android:src="@drawable/back_right"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
